{
  "manifest_version": 3,
  "name": "Email Writer Assistant",
  "version": "1.0.0",
  "description": "AI-Powered Email Writer Assistant",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "http://localhost:8080/*",
    "*://mail.google.com/*"
  ],

  "action": {
    "default_title": "Email Writer Assistant"
  },

  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://mail.google.com/*"]
    }
  ]
}
